@model OrderingSystem.Models.Order
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Order Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="p-4">
    <div class="container">
        <h2>Order #@Model.Id</h2>
        <p>Customer: @Model.CustomerName</p>
        <p>Date: @Model.OrderDate</p>
        <p>Total: @String.Format("{0:C}", Model.TotalAmount)</p>
        <h4>Items</h4>
        <table class="table">
            <thead><tr><th>Product</th><th>Qty</th><th>Unit</th></tr></thead>
            <tbody>
            @if (Model.Items != null)
            {
                foreach(var item in Model.Items)
                {
                    <tr><td>@item.Name</td><td>@item.Quantity</td><td>@String.Format("{0:C}", item.UnitPrice)</td></tr>
                }
            }
            </tbody>
        </table>
    </div>
</body>
</html>
